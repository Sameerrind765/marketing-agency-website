{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "outDir": "./dist", 
    "rootDir": "./src", 
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "./**/*.mts"],
  "exclude": ["node_modules", "dist"]
}
